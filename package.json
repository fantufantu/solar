{
  "name": "solar",
  "version": "1.0.0",
  "description": "fantufantu的服务端项目",
  "author": "murukal",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev:pluto": "nest start pluto --watch",
    "dev:mercury": "nest start mercury --watch",
    "dev:venus": "nest start venus --watch",
    "dev:halley": "nest start halley --watch",
    "start:pluto": "nest start pluto",
    "start:mercury": "nest start mercury",
    "start:venus": "nest start venus",
    "start:halley": "nest start halley",
    "build": "rimraf ./dist && nest build pluto && nest build mercury && nest build venus && nest build halley"
  },
  "dependencies": {
    "@apollo/gateway": "^2.9.0",
    "@apollo/server": "^4.11.0",
    "@apollo/subgraph": "^2.9.0",
    "@nestjs/apollo": "^11.0.6",
    "@nestjs/common": "^9.4.3",
    "@nestjs/config": "^2.3.4",
    "@nestjs/core": "^9.4.3",
    "@nestjs/graphql": "^11.0.6",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^9.4.3",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/typeorm": "^9.0.1",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.1",
    "dataloader": "^2.2.2",
    "dayjs": "^1.11.13",
    "graphql": "^16.9.0",
    "mysql2": "^3.11.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^5.0.10",
    "rxjs": "^7.8.1",
    "tencentcloud-sdk-nodejs": "^4.0.935",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.3",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.2",
    "@types/node": "^20.16.5",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/passport(|/.*)$": "<rootDir>/libs/passport/src/$1",
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@app/mercury-client(|/.*)$": "<rootDir>/libs/mercury-client/src/$1",
      "^@app/pluto-client(|/.*)$": "<rootDir>/libs/pluto-client/src/$1"
    }
  }
}
