{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "generateOptions": {
    "spec": false
  },
  "monorepo": true,
  "compilerOptions": {
    "webpack": true
  },
  "projects": {
    "sun": {
      "type": "application",
      "root": "apps/sun",
      "entryFile": "main",
      "sourceRoot": "apps/sun/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sun/tsconfig.app.json"
      }
    },
    "mercury": {
      "type": "application",
      "root": "apps/mercury",
      "entryFile": "main",
      "sourceRoot": "apps/mercury/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mercury/tsconfig.app.json"
      }
    },
    "graphql": {
      "type": "library",
      "root": "libs/graphql",
      "entryFile": "index",
      "sourceRoot": "libs/graphql/src",
      "compilerOptions": {
        "tsConfigPath": "libs/graphql/tsconfig.lib.json"
      }
    },
    "passport": {
      "type": "library",
      "root": "libs/passport",
      "entryFile": "index",
      "sourceRoot": "libs/passport/src",
      "compilerOptions": {
        "tsConfigPath": "libs/passport/tsconfig.lib.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "mercury-client": {
      "type": "library",
      "root": "libs/mercury-client",
      "entryFile": "index",
      "sourceRoot": "libs/mercury-client/src",
      "compilerOptions": {
        "tsConfigPath": "libs/mercury-client/tsconfig.lib.json"
      }
    },
    "pluto": {
      "type": "application",
      "root": "apps/pluto",
      "entryFile": "main",
      "sourceRoot": "apps/pluto/src",
      "compilerOptions": {
        "tsConfigPath": "apps/pluto/tsconfig.app.json"
      }
    }
  }
}